@model IEnumerable<D2DTechSampleApplication.Models.WorkTask>

<h2>Work Tasks</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.WorkTaskId }, null) |
                @Html.ActionLink("Details", "Details", new { id = item.WorkTaskId }, null)
            </td>
        </tr>
    }
</table>